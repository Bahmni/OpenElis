        </addColumn>
        <addForeignKeyConstraint baseColumnNames="sample_source_id"
                baseTableName="sample"
                constraintName="fk_sample_sample_source"
                onUpdate="RESTRICT"
                referencedColumnNames="id"
                referencedTableName="sample_source"/>
